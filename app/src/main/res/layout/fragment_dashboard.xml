<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- Background View -->
    <View
        android:id="@+id/rectangleBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Map Image -->
    <ImageView
        android:id="@+id/map_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/map_image"
    android:contentDescription="@string/map_description"
    android:scaleType="fitCenter"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Positivity Pal Markers -->
    <ImageView
        android:id="@+id/pal_marker_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_person_pin_24"
    app:layout_constraintStart_toStartOf="@+id/map_image"
    app:layout_constraintTop_toTopOf="@+id/map_image"
    android:layout_marginStart="150dp"
    android:layout_marginTop="150dp" />

    <ImageView
        android:id="@+id/pal_marker_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_person_pin_24"
        app:layout_constraintStart_toStartOf="@+id/map_image"
        app:layout_constraintTop_toTopOf="@+id/map_image"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp" />

    <ImageView
        android:id="@+id/pal_marker_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_person_pin_24"
        app:layout_constraintStart_toStartOf="@+id/map_image"
        app:layout_constraintTop_toTopOf="@+id/map_image"
        android:layout_marginStart="250dp"
        android:layout_marginTop="250dp" />

    <ImageView
        android:id="@+id/pal_marker_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_person_pin_24"
        app:layout_constraintStart_toStartOf="@+id/map_image"
        app:layout_constraintTop_toTopOf="@+id/map_image"
        android:layout_marginStart="100dp"
        android:layout_marginTop="300dp" />

    <!-- More markers can be added similarly with different margin values for positioning -->

</androidx.constraintlayout.widget.ConstraintLayout>
