<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    tools:context=".ui.dashboard.DashboardFragment">
    <!--Set layout_constraintBottom_toBottomOf to last element in this layout-->
    <View
        android:id="@+id/rectangleBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_background"
        app:layout_constraintBottom_toBottomOf="@+id/text_dashboard2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:paddingBottom="8dp"
        android:layout_marginBottom="-8dp"/>

    <TextView
        android:id="@+id/text_dashboard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="318dp"
        android:layout_height="301dp"
        android:layout_marginTop="20dp"
        android:background="#CDC2C2"
        android:contentDescription="Meet with others"
        app:layout_constraintBottom_toTopOf="@+id/text_dashboard2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rectangleBackground"
        app:layout_constraintTop_toTopOf="@+id/rectangleBackground" />


</androidx.constraintlayout.widget.ConstraintLayout>